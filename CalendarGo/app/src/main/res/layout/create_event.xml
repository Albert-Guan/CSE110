<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="Add an event to the list."
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="30dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name of organizer"
                    android:ems="10"
                    android:id="@+id/editText7"
                    android:textAlignment="viewStart"
                    android:lineSpacingExtra="20sp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name of event"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:selectAllOnFocus="true"
                    android:textAlignment="viewStart"
                    android:singleLine="true"
                    android:hint="e.g. Archery Club GBM" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Address"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:selectAllOnFocus="true"
                    android:textAlignment="viewStart"
                    android:singleLine="true"
                    android:hint="e.g. 9450 Gilman Drive" />

                <TextView
                    android:text="Enter date of event:"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textView4"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <DatePicker
                    android:layout_width="match_parent"
                    android:id="@+id/datePicker2"
                    android:headerBackground="?attr/colorPrimaryDark"
                    android:layout_height="wrap_content"
                    android:contextClickable="false"
                    android:paddingLeft="30dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="CANCEL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button2"
                        android:layout_weight="1" />

                    <Button
                        android:text="Create"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/button3" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </GridLayout>

</LinearLayout>